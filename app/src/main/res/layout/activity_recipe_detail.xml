<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/recipeDetailActivity_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent"
            android:contentDescription="Photo of finished product"
            android:transitionName="recipeImageTransition"
            tools:src="@drawable/vegan_lasagne"/>

        <!-- Title -->
        <TextView
            android:id="@+id/recipeDetailActivity_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:transitionName="recipeTitleTransition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            tools:text="Vegan Lasagne"/>

        <!-- Summary -->
        <TextView
            android:id="@+id/recipeDetailActivity_summary"
            android:transitionName="recipeSummaryTransition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            tools:text="Summary of recipe. It's delicious and nutritious!"/>

        <!-- Ingredients Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textStyle="bold" />

        <!-- Ingredients -->
        <TextView
            android:id="@+id/recipeDetailActivity_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="- Ingredient 1\n- Ingredient 2"/>

        <!-- Steps Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Method"
            android:textStyle="bold" />

        <!-- Steps -->
        <TextView
            android:id="@+id/recipeDetailActivity_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1. Do a thing.\n2. Do another thing." />



        <!-- -->

    </LinearLayout>

</ScrollView>